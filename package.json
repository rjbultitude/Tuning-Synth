{
  "name": "discog-trends",
  "version": "1.0.0",
  "description": "",
  "main": "./server/index.js",
  "scripts": {
    "start": "npm run build:devserver",
    "build:dev": "webpack --env dev --mode=development",
    "build:devserver": "webpack-dev-server --open --config=webpack/webpack.dev.js",
    "build:prod": "webpack --env prod --mode=production",
    "test": "NODE_ENV=test nyc mocha --recursive src/**/*.spec.js",
    "lint:quality": "eslint .",
    "lint:css": "stylelint './src/**/*.css'",
    "lint:format-js": "prettier --write ./src/**/*.js",
    "lint:format-css": "stylelint ./src/**/*.css",
    "lint:format-check": "prettier --check ./src/**/*.js"
  },
  "author": "Richard Bultitude",
  "license": "ISC",
  "dependencies": {
    "freqi": "^1.3.2",
    "p5": "^0.10.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "babel-eslint": "^10.0.3",
    "browserslist": "^4.12.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.2.0",
    "husky": "^4.2.5",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "stylelint": "^13.5.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-prettier": "^1.1.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-md5-hash": "0.0.6"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "mocha": {
    "watch-files": [
      "**/*.spec.js"
    ],
    "exclude": ["node_modules", "dist"],
    "require": [
      "@babel/register",
      "jsdom-global/register"
    ]
  },
  "nyc": {
    "include": "src",
    "exclude": ["**/*.spec.js"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern **/*.js && npm run lint:format-css",
      "pre-push": "npm run lint:quality"
    }
  }
}
